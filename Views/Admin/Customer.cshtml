
@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using HurtowniaReptiGood.Models.ViewModels

@model CustomerWithAddressesViewModel

<body>
    <div>
        <form action="EditCustomer" method="post" enctype="multipart/form-data">
            <h4>Dane do faktury</h4>
            <div class="form-group">
                <label>Nazwa firmy</label>
                <input type="text" class="form-control" name="ProductSymbol" value="@Model.InvoiceAddress.CompanyName">
            </div>
            <div class="form-group">
                <label>Imię</label>
                <input type="text" class="form-control" name="ProductName" value="@Model.InvoiceAddress.CustomerName">
            </div>
            <div class="form-group">
                <label>Nazwisko</label>
                <input type="text" class="form-control" name="ProductName" value="@Model.InvoiceAddress.CustomerSurname">
            </div>
            <div class="form-group">
                <label>NIP</label>
                <input type="text" class="form-control" name="Price" value="@Model.InvoiceAddress.NIP">
            </div>
            <div class="form-group">
                <label>Ulica</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.InvoiceAddress.Street">
            </div>
            <div class="form-group">
                <label>Numer budynku</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.InvoiceAddress.StreetNumber">
            </div>
            <div class="form-group">
                <label>Miasto</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.InvoiceAddress.City">
            </div>
            <div class="form-group">
                <label>Kod pocztowy</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.InvoiceAddress.ZipCode">
            </div>
            <h4>Dane do wysyłki</h4>
            <div class="form-group">
                <label>Nazwa firmy</label>
                <input type="text" class="form-control" name="ProductSymbol" value="@Model.ShippingAddress.CompanyName">
            </div>
            <div class="form-group">
                <label>Imię</label>
                <input type="text" class="form-control" name="ProductName" value="@Model.ShippingAddress.CustomerName">
            </div>
            <div class="form-group">
                <label>Nazwisko</label>
                <input type="text" class="form-control" name="ProductName" value="@Model.ShippingAddress.CustomerSurname">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="Price" value="@Model.ShippingAddress.Email">
            </div>
            <div class="form-group">
                <label>Telefon</label>
                <input type="text" class="form-control" name="Price" value="@Model.ShippingAddress.Phone">
            </div>
            <div class="form-group">
                <label>Ulica</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.ShippingAddress.Street">
            </div>
            <div class="form-group">
                <label>Numer budynku</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.ShippingAddress.StreetNumber">
            </div>
            <div class="form-group">
                <label>Miasto</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.ShippingAddress.City">
            </div>
            <div class="form-group">
                <label>Kod pocztowy</label>
                <input type="text" class="form-control" min="0" name="Stock" value="@Model.ShippingAddress.ZipCode">
            </div>

            <input class="myButton4" type="submit" value="Zapisz zmiany" />
        </form>
    </div>
</body>