
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "GetProducts";
}

@using HurtowniaReptiGood.Models
@model ProductsListViewModel

<body>
    <style>
        .zoom {
            padding: 5px;
            transition: transform .2s;
            width: 80px;
            margin: 0 auto;
        }
            .zoom:hover {
                transform: scale(5);
            }
    </style>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr scope="col" class="text-center">
                    <th>Nazwa</th>
                    <th>Symbol</th>
                    <th>Producent</th>
                    <th>Zdjęcie</th>
                    <th>Cena netto</th>
                    <th>Cena brutto</th>
                    <th>Stan</th>
                    <th>Edytuj</th>
                </tr>
            <thead>
            <tbody>
                @foreach (ProductViewModel product in Model.Products)
                {
                    <tr text-align="center">
                        <td>@product.ProductName</td>
                        <td>@product.ProductSymbol</td>
                        <td>@product.Manufacturer</td>
                        <td><img src="~/@product.Photo" class="zoom" /></td>
                        <td>@(Math.Round(product.Price/1.23, 2))zł</td>
                        <td>@(product.Price)zł</td>
                        <td>@(product.Stock)szt</td>
                        <td>
                            <form action="ProductDetails" method="get">
                                <input type="hidden" name="ProductId" value="@product.ProductId">
                                <input type="submit" value="Edytuj" />
                            </form>
                        </td>
                    </tr>
                }
            <tbody>
        </table>
    </div>
</body>



