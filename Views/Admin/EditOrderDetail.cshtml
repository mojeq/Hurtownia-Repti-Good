
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "EditOrderDetail";
}

@model OrderDetailViewModel

<body>
    <div>
        <form action="ChangeOrderDetail" method="post">
            <div class="form-group">
                <label>Symbol produktu</label>
                <input type="text" class="form-control" name="OrderId" value="@Model.ProductSymbol" readonly="readonly">
            </div>
            <div class="form-group">
                <label>Nazwa produktu</label>
                <input type="text" class="form-control" name="CustomerId" value="@Model.ProductName">
            </div>
            <div class="form-group">
                <label>Sztuk</label>
                <input type="text" class="form-control" name="DateOrder" value="@Model.Quantity">
            </div>
            <div class="form-group">
                <label>Cena</label>
                <input type="text" class="form-control" name="ValueOrder" value="@Model.Price">
            </div>
            <div class="form-group">
                <label>Wartość</label>
                <input type="text" class="form-control" name="TrackingNumber" value="@Model.Value">
            </div>
            <input class="myButton4" type="submit" value="Zapisz zmiany" />
        </form>
    </div>
</body>

